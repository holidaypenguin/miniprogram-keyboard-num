
image{
  width: 100%;
  height: 100%;
}
/* 整体 */
.keyboard-view{
  /* display: flex; */
  /* flex-direction: column; */
  height: 100%;
  position: relative;
}
/* 头部 */
.keyboard-title{
  /* flex: 1; */
  background: #FFFFFF;
  overflow: hidden;
}
.keyboard-title-inner{
  margin: 68rpx 42rpx 36rpx 42rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #111A34;
  text-align: left;
  line-height: 32rpx;
  height: 32rpx;
}
/* 输入框 */
.keyboard-input{
  /* flex: 1; */
  background: #FFFFFF;
  overflow: hidden;
}
.keyboard-input-inner{
  margin: 0rpx 40rpx 24rpx 40rpx;
  position: relative;
  border-bottom: 2px solid #111A34;
  padding-bottom: 12rpx;
}
.keyboard-input-el-container{
  min-height: 100rpx;
  font-size: 0;
  margin-right:59rpx;
}
.keyboard-input-el{
  /* position:absolute; */
  /* display: flex; */
  /* top:0;
  left:0; 
  bottom:0; */
  line-height: 100rpx;
  font-size: 66rpx;
  color: #333333;
  letter-spacing: 0;
  text-align: left;
  word-break: break-all;
  /* white-space: nowrap; */
  font-family: april;
  /* display: inline; */
}
.keyboard-input-split{
  /* position: absolute; */
  /* top: 0; */
  /* bottom: 26rpx; */
  width: 4rpx;
  height: 70rpx;
  /* right: 67rpx; */
  /* margin: 15rpx 0 15rpx 6rpx; */
  display: inline-block;
  background-color: #F6504D;
  position: relative;
  bottom: -10rpx;
  margin-left: 6rpx;
  /* display: inline; */
}

.keyboard-input-close{
  width: 36rpx;
  height: 36rpx;
  border-radius: 36rpx;
  position: absolute;
  bottom: 44rpx;
  right: 0rpx;
}

.keyboard-input-close-el{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  transform: scale(2);
}
/* 提示框 */
.keyboard-tips{
  /* flex: 1 152rpx; */
  background: #FFFFFF;
  padding: 0 40rpx 72rpx 40rpx;
  opacity: 0.8;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #666F83;
  line-height: 28rpx;
}
.keyboard-tips-inner{
  margin-left: 75rpx;
  margin-right: 75rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: #848391;
  background:#e9ebf1;
  border-radius: 64rpx;
}
.keyboard-empty{
  flex: 1;
}
/* 键盘主体 */
.keyboard-main{
  /* flex: 1 800rpx; */
  display: flex;
  /* flex-direction: column; */
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
.keyboard-main-left{
  width: 564rpx;
}
.keyboard-main-right{
  width: 186rpx;
}
.keyboard-main-line{
  /* flex: 1 160rpx; */
  display: flex;
  border-top: 1rpx solid #E2E4EA;
}
.keyboard-main-item{
  flex: 1 250rpx;
  background:#FFFFFF;
  position: relative;
  height: 107rpx;
}
.keyboard-main-item + .keyboard-main-item{
  border-left: 1px solid #E2E4EA;
}
.keyboard-main-item--option{
  height: 50%;
  border:0!important;
}
.keyboard-main-button{
  /* width: 100%;  */
  /* height: 100%;  */
  border: 0;
  padding: 0;
  margin: 0;
  line-height: 1;
  /* display: table; */
  border-radius: 0rpx;
  background: #FFFFFF;
  font-size: 56rpx;
  color: #000000;
  width: 100%;
  height: 100%;
  padding-top: 34rpx;
}
.keyboard-main-button--0{
  font-size: 60rpx;
  padding-top: 30rpx;
}
.keyboard-main-button--point{
  padding-top: 0;
}
.keyboard-main-button text{
  line-height: 73rpx;
}
.keyboard-main-button::after{
  border: 0rpx;
  border-radius: 0rpx;
}
.keyboard-main-button--point text{
  font-size: 80rpx;
  line-height: 0.7;
}
.keyboard-main-buttom_remove{
  border-left: 1px solid #E2E4EA;
  border-top: 1px solid #E2E4EA;
  padding-top: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.keyboard-main-buttom_remove-image{
  /* display: table-cell; */
  /* vertical-align: middle; */
  width: 48rpx;
  height: 34rpx;
  margin: 0 auto;
}
.keyboard-main-button_confirm{
  background-color: #F6504D;
  color: #FFFFFF;
  padding-top: 0rpx;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.keyboard-main-button_hover{
  background-color: #EAEAEA;
}
.keyboard-main-button_confirm-hover{
  background-color: #FDBE5E;
}

.verify-input-text{
  display: block;
  float: right;
  width: 32rpx;
  line-height: 84rpx;
}
.verify-input-close{
  right: 52rpx;
}